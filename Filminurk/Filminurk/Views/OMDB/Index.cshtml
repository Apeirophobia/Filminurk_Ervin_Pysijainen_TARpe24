@model Filminurk.Models.OMDB.OMDBSearchViewModel

<h1>Otsi filmi</h1>

<div class="container"></div>
<form method="post">
	<div class="container">
		<div class="form-group col-md-offset-3 col-md-5">
			<h2>Siit saad ilma otsida soovitud linnast:</h2>
			<label asp-for="MovieTitle" style="font:Arial"></label>
			<input asp-for="MovieTitle" class="form-control" />
			<span asp-validation-for="MovieTitle" class="text-danger"></span>
		</div>
	</div>

	<div class="container">
		<div class="form-group col-md-offset-3 col-md-5">
			<button asp-controller="OMDB" asp-action="FindMovie" class="btn btn-primary">Otsi</button>
		</div>
	</div>
</form>