@model IEnumerable<Filminurk.Models.Actors.ActorsIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-contorller="Actors" type="submit" class="btn btn-primary">Lisa Näitleja</a>
</div>

<div>
	<form method="get">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Eesnimi</th>
					<th scope="col">Perekonnanimi</th>
					<th scope="col">Lemmikžanr</th>
					<th scope="col">Auhinnad</th>
					<th scope="col">Tööriistad</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var actor in Model){
					<tr>
						<td>@rowNumber</td>
						<td>@actor.FirstName</td>
						<td>@actor.LastName</td>
						<td>@actor.FavouriteGenre</td>
						<td>@actor.HasAwards</td>
						<td></td>
						<td>
							<a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-danger">Kustuta</a>
							<a asp-action="Update" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-primary">Muuda</a>
							<a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-primary">Info</a>
						</td>
					</tr>
					rowNumber++;
				}
			</tbody>
		</table>
	</form>

</div>